    <script>
        // Form Builder State
        const formBuilder = {
            fields: [],
            selectedField: null
        };

        // Initialize with demo form
        const demoFields = [
            {id: 'field_1', type: 'heading', content: 'Contact Us'},
            {id: 'field_2', type: 'paragraph', content: 'Fill out the form below and we will get back to you within 24 hours.'},
            {id: 'field_3', type: 'text', label: 'Your Name', placeholder: 'John Doe', required: true},
            {id: 'field_4', type: 'email', label: 'Email Address', placeholder: 'john@example.com', required: true},
            {id: 'field_5', type: 'select', label: 'Subject', options: ['General Inquiry', 'Support', 'Sales', 'Partnership'], required: true},
            {id: 'field_6', type: 'textarea', label: 'Message', placeholder: 'How can we help you?', required: true, rows: 5}
        ];
        formBuilder.fields = demoFields;

        // Render canvas
        function renderCanvas() {
            const canvas = document.getElementById('formCanvas');

            if (formBuilder.fields.length === 0) {
                canvas.classList.add('empty');
                canvas.innerHTML = 'Drag fields here to build your form';
                return;
            }

            canvas.classList.remove('empty');
            canvas.innerHTML = formBuilder.fields.map((field, index) => renderField(field, index)).join('');
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function renderField(field, index) {
            let content = '';
            const required = field.required ? '<span class="field-required">*</span>' : '';

            switch (field.type) {
                case 'heading':
                    content = '<h2 class="field-heading">' + escapeHtml(field.content || 'Section Heading') + '</h2>';
                    break;
                case 'paragraph':
                    content = '<p class="field-paragraph">' + escapeHtml(field.content || 'Paragraph text...') + '</p>';
                    break;
                case 'divider':
                    content = '<div class="field-divider"></div>';
                    break;
                case 'textarea':
                    content = '<label class="field-label">' + escapeHtml(field.label || 'Text Area') + ' ' + required + '</label>' +
                        '<textarea class="field-input" rows="' + (field.rows || 3) + '" placeholder="' + escapeHtml(field.placeholder || '') + '"></textarea>';
                    break;
                case 'select':
                    var options = (field.options || ['Option 1', 'Option 2']).map(function(opt) {
                        return '<option>' + escapeHtml(opt) + '</option>';
                    }).join('');
                    content = '<label class="field-label">' + escapeHtml(field.label || 'Dropdown') + ' ' + required + '</label>' +
                        '<select class="field-input">' + options + '</select>';
                    break;
                case 'radio':
                    var radios = (field.options || ['Option 1', 'Option 2']).map(function(opt, i) {
                        return '<label style="display: flex; align-items: center; gap: 8px; margin: 5px 0;"><input type="radio" name="radio_' + field.id + '"> ' + escapeHtml(opt) + '</label>';
                    }).join('');
                    content = '<label class="field-label">' + escapeHtml(field.label || 'Radio Buttons') + ' ' + required + '</label>' + radios;
                    break;
                case 'checkbox':
                    var checks = (field.options || ['Option 1', 'Option 2']).map(function(opt, i) {
                        return '<label style="display: flex; align-items: center; gap: 8px; margin: 5px 0;"><input type="checkbox"> ' + escapeHtml(opt) + '</label>';
                    }).join('');
                    content = '<label class="field-label">' + escapeHtml(field.label || 'Checkboxes') + ' ' + required + '</label>' + checks;
                    break;
                default:
                    content = '<label class="field-label">' + escapeHtml(field.label || field.type) + ' ' + required + '</label>' +
                        '<input type="' + field.type + '" class="field-input" placeholder="' + escapeHtml(field.placeholder || '') + '">';
            }

            return '<div class="canvas-field" data-index="' + index + '" onclick="selectField(' + index + ')">' +
                '<div class="field-actions">' +
                    '<button class="field-action-btn" onclick="duplicateField(' + index + '); event.stopPropagation();" title="Duplicate">&#128203;</button>' +
                    '<button class="field-action-btn delete" onclick="deleteField(' + index + '); event.stopPropagation();" title="Delete">&#128465;</button>' +
                '</div>' +
                content +
            '</div>';
        }

        // Field operations
        function selectField(index) {
            formBuilder.selectedField = index;
            document.querySelectorAll('.canvas-field').forEach(function(el, i) {
                el.classList.toggle('selected', i === index);
            });
            renderSettings(formBuilder.fields[index]);
        }

        function deleteField(index) {
            formBuilder.fields.splice(index, 1);
            formBuilder.selectedField = null;
            renderCanvas();
            renderSettings(null);
        }

        function duplicateField(index) {
            var field = JSON.parse(JSON.stringify(formBuilder.fields[index]));
            field.id = 'field_' + Date.now();
            formBuilder.fields.splice(index + 1, 0, field);
            renderCanvas();
        }

        function clearCanvas() {
            if (confirm('Are you sure you want to clear all fields?')) {
                formBuilder.fields = [];
                renderCanvas();
                renderSettings(null);
            }
        }

        // Settings panel
        function renderSettings(field) {
            var container = document.getElementById('settingsContent');

            if (!field) {
                container.innerHTML = '<div class="no-field-selected"><div class="icon">&#9881;</div><p>Select a field to edit its settings</p></div>';
                return;
            }

            var html = '<div class="setting-group"><h4>Field Properties</h4>';

            if (field.type === 'heading' || field.type === 'paragraph') {
                html += '<div class="setting-row"><label class="setting-label">Content</label>' +
                    '<textarea class="setting-input" rows="3" onchange="updateField(\'content\', this.value)">' + escapeHtml(field.content || '') + '</textarea></div>';
            } else if (field.type !== 'divider') {
                html += '<div class="setting-row"><label class="setting-label">Label</label>' +
                    '<input type="text" class="setting-input" value="' + escapeHtml(field.label || '') + '" onchange="updateField(\'label\', this.value)"></div>';
                html += '<div class="setting-row"><label class="setting-label">Placeholder</label>' +
                    '<input type="text" class="setting-input" value="' + escapeHtml(field.placeholder || '') + '" onchange="updateField(\'placeholder\', this.value)"></div>';
                html += '<div class="setting-row"><label class="setting-checkbox">' +
                    '<input type="checkbox" ' + (field.required ? 'checked' : '') + ' onchange="updateField(\'required\', this.checked)"> Required field</label></div>';

                if (field.type === 'select' || field.type === 'radio' || field.type === 'checkbox') {
                    var options = (field.options || []).join('\n');
                    html += '<div class="setting-row"><label class="setting-label">Options (one per line)</label>' +
                        '<textarea class="setting-input" rows="4" onchange="updateField(\'options\', this.value.split(\'\\n\'))">' + escapeHtml(options) + '</textarea></div>';
                }

                if (field.type === 'textarea') {
                    html += '<div class="setting-row"><label class="setting-label">Rows</label>' +
                        '<input type="number" class="setting-input" value="' + (field.rows || 3) + '" min="2" max="20" onchange="updateField(\'rows\', parseInt(this.value))"></div>';
                }
            }

            html += '<div class="setting-row"><label class="setting-label">Field ID</label>' +
                '<input type="text" class="setting-input" value="' + field.id + '" readonly style="opacity: 0.6;">' +
                '<p class="setting-help">Auto-generated unique identifier</p></div></div>';

            container.innerHTML = html;
        }

        function updateField(property, value) {
            if (formBuilder.selectedField === null) return;
            formBuilder.fields[formBuilder.selectedField][property] = value;
            renderCanvas();
            selectField(formBuilder.selectedField);
        }

        // Drag and drop
        document.querySelectorAll('.field-type').forEach(function(el) {
            el.addEventListener('dragstart', function(e) {
                e.dataTransfer.setData('type', el.dataset.type);
                e.dataTransfer.setData('label', el.dataset.label);
            });
        });

        var canvas = document.getElementById('formCanvas');

        canvas.addEventListener('dragover', function(e) {
            e.preventDefault();
            canvas.classList.add('drag-over');
        });

        canvas.addEventListener('dragleave', function() {
            canvas.classList.remove('drag-over');
        });

        canvas.addEventListener('drop', function(e) {
            e.preventDefault();
            canvas.classList.remove('drag-over');

            var type = e.dataTransfer.getData('type');
            var label = e.dataTransfer.getData('label');

            if (type) {
                var newField = {
                    id: 'field_' + Date.now(),
                    type: type,
                    label: label
                };

                if (type === 'heading' || type === 'paragraph') {
                    newField.content = type === 'heading' ? 'Section Heading' : 'Enter your text here...';
                }

                if (type === 'select' || type === 'radio' || type === 'checkbox') {
                    newField.options = ['Option 1', 'Option 2', 'Option 3'];
                }

                formBuilder.fields.push(newField);
                renderCanvas();
            }
        });

        // Actions
        function previewForm() {
            var container = document.getElementById('previewContainer');
            var html = '<h2 style="margin-bottom: 20px;">' + escapeHtml(document.getElementById('formName').value) + '</h2><form>';
            formBuilder.fields.forEach(function(f, i) {
                html += renderField(f, i);
            });
            html += '<button type="submit" class="btn btn-primary" style="margin-top: 20px;">Submit</button></form>';
            container.innerHTML = html;
            document.getElementById('previewOverlay').classList.add('active');
        }

        function closePreview() {
            document.getElementById('previewOverlay').classList.remove('active');
        }

        function exportForm() {
            var formData = {
                name: document.getElementById('formName').value,
                fields: formBuilder.fields
            };
            var blob = new Blob([JSON.stringify(formData, null, 2)], {type: 'application/json'});
            var url = URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = formData.name.toLowerCase().replace(/\s+/g, '-') + '.json';
            a.click();
        }

        function saveForm() {
            var formData = {
                name: document.getElementById('formName').value,
                fields: formBuilder.fields
            };
            console.log('Saving form:', formData);
            alert('Form saved! (In production this would persist to storage)');
        }

        // Initialize
        renderCanvas();
    </script>
