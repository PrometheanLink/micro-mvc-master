                            <label class="form-label">Value</label>
                            <input type="number" class="form-input stat-value" value="0">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Icon</label>
                            <select class="form-select stat-icon">
                                <option value="users">Users</option>
                                <option value="money">Money</option>
                                <option value="cart">Cart</option>
                                <option value="target">Target</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Color</label>
                            <div class="color-options">
                                <div class="color-option orange selected" data-color="orange"></div>
                                <div class="color-option green" data-color="green"></div>
                                <div class="color-option purple" data-color="purple"></div>
                                <div class="color-option gold" data-color="gold"></div>
                                <div class="color-option cyan" data-color="cyan"></div>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            editor.insertAdjacentHTML('beforeend', html);

            // Re-attach color listeners
            editor.lastElementChild.querySelectorAll('.color-option').forEach(opt => {
                opt.addEventListener('click', () => {
                    opt.parentElement.querySelectorAll('.color-option').forEach(o => o.classList.remove('selected'));
                    opt.classList.add('selected');
                });
            });
        }

        // Remove stat card
        function removeStat(index) {
            const items = document.querySelectorAll('.stat-item');
            items[index]?.remove();
        }

        // Export config
        function exportConfig() {
            const config = buildConfig();
            const blob = new Blob([JSON.stringify(config, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'prometheanlink-dashboard-config.json';
            a.click();
            URL.revokeObjectURL(url);
            showToast('Config exported!');
        }

        // Import config
        function importConfig(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = async (e) => {
                try {
                    const config = JSON.parse(e.target.result);

                    // Save to server
                    const response = await fetch('/phoenix/api/save-config.php', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(config)
                    });

                    if (response.ok) {
                        showToast('Config imported! Reloading...');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showToast('Error importing config', 'error');
                    }
                } catch (error) {
                    showToast('Invalid config file', 'error');
                }
            };
            reader.readAsText(file);
        }

        // Toast notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast' + (type === 'error' ? ' error' : '');
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        console.log('üî• PrometheanLink Control Panel loaded');
    </script>

