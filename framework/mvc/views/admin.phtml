    <script>
        // Current config state
        let currentConfig = <?= json_encode($data['config'] ?? []) ?>;

        // Navigation
        document.querySelectorAll('.nav-item[data-section]').forEach(item => {
            item.addEventListener('click', () => {
                // Update nav
                document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
                item.classList.add('active');

                // Update section
                const section = item.dataset.section;
                document.querySelectorAll('.section-content').forEach(s => s.classList.remove('active'));
                document.getElementById('section-' + section).classList.add('active');
            });
        });

        // Color selection
        document.querySelectorAll('.color-option').forEach(opt => {
            opt.addEventListener('click', () => {
                const parent = opt.closest('.stat-item');
                parent.querySelectorAll('.color-option').forEach(o => o.classList.remove('selected'));
                opt.classList.add('selected');
            });
        });

        // Build config from form
        function buildConfig() {
            const config = {
                title: document.getElementById('config-title').value,
                subtitle: document.getElementById('config-subtitle').value,
                theme: document.getElementById('config-theme').value,
                show_particles: document.getElementById('config-particles').checked,
                stats: [],
                chart: currentConfig.chart || {},
                progress: currentConfig.progress || [],
                activities: currentConfig.activities || []
            };

            // Update chart title
            const chartTitle = document.getElementById('chart-title');
            if (chartTitle) {
                config.chart.title = chartTitle.value;
            }

            // Build stats from form
            document.querySelectorAll('.stat-item').forEach(item => {
                const stat = {
                    title: item.querySelector('.stat-title').value,
                    value: parseFloat(item.querySelector('.stat-value').value),
                    icon: item.querySelector('.stat-icon').value,
                    color: item.querySelector('.color-option.selected')?.dataset.color || 'orange'
                };

                // Preserve prefix/suffix/trend from current config if they exist
                const index = parseInt(item.dataset.index);
                if (currentConfig.stats && currentConfig.stats[index]) {
                    if (currentConfig.stats[index].prefix) stat.prefix = currentConfig.stats[index].prefix;
                    if (currentConfig.stats[index].suffix) stat.suffix = currentConfig.stats[index].suffix;
                    if (currentConfig.stats[index].trend) stat.trend = currentConfig.stats[index].trend;
                }

                config.stats.push(stat);
            });

            return config;
        }

        // Save config to server
        async function saveConfig() {
            const config = buildConfig();

            try {
                const response = await fetch('/phoenix/api/save-config.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(config)
                });

                if (response.ok) {
                    currentConfig = config;
                    showToast('Configuration saved!');
                } else {
                    showToast('Error saving configuration', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showToast('Error saving configuration', 'error');
            }
        }

