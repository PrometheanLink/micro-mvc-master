    <link rel="stylesheet" href="/phoenix/assets/css/phoenix-core.css">

    <style>
        /* Dashboard Layout */
        .dashboard-container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 30px;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .dashboard-title {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--phoenix-accent-primary), var(--phoenix-accent-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }

        .dashboard-date {
            color: var(--phoenix-text-secondary);
        }

        /* Grid Layouts */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--phoenix-gap);
            margin-bottom: var(--phoenix-gap-lg);
        }

        .two-col-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: var(--phoenix-gap);
            margin-bottom: var(--phoenix-gap-lg);
        }

        .progress-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--phoenix-gap);
            margin-bottom: var(--phoenix-gap-lg);
        }

        /* Stats Card */
        .stat-card {
            background: var(--phoenix-card-bg);
            border: 1px solid var(--phoenix-border-color);
            border-radius: var(--phoenix-radius);
            padding: 24px;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--stat-color, var(--phoenix-accent-primary));
        }

        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 12px;
        }

        .stat-title {
            font-size: 0.9rem;
            color: var(--phoenix-text-secondary);
            margin: 0;
        }

        .stat-icon {
            font-size: 1.5rem;
            opacity: 0.8;
        }

        .stat-value {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--phoenix-text-primary);
            margin-bottom: 8px;
        }

        .stat-trend {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.85rem;
        }

        .stat-trend.up { color: var(--phoenix-success); }
        .stat-trend.down { color: var(--phoenix-danger); }

        .stat-trend .period {
            color: var(--phoenix-text-muted);
        }

        /* Color variants */
        .stat-card.cyan { --stat-color: #00d4ff; }
        .stat-card.purple { --stat-color: #7b2cbf; }
        .stat-card.green { --stat-color: #22c55e; }
        .stat-card.orange { --stat-color: #f59e0b; }
        .stat-card.pink { --stat-color: #ec4899; }

        /* Chart Card */
        .chart-card {
            background: var(--phoenix-card-bg);
            border: 1px solid var(--phoenix-border-color);
            border-radius: var(--phoenix-radius);
            padding: 24px;
        }

        .chart-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0 0 20px 0;
        }

        .chart-container {
            height: 250px;
            display: flex;
            align-items: flex-end;
            gap: 8px;
            padding: 20px 0;
        }

        .chart-bar-group {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
        }

        .chart-bars {
            display: flex;
            gap: 4px;
            align-items: flex-end;
            height: 200px;
        }

        .chart-bar {
            width: 24px;
            border-radius: 4px 4px 0 0;
            transition: all 0.3s ease;
        }

        .chart-bar:hover {
            opacity: 0.8;
            transform: scaleY(1.02);
        }

        .chart-label {
            font-size: 0.8rem;
            color: var(--phoenix-text-secondary);
        }

        /* Activity Feed */
        .activity-card {
            background: var(--phoenix-card-bg);
            border: 1px solid var(--phoenix-border-color);
            border-radius: var(--phoenix-radius);
            padding: 24px;
        }

        .activity-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0 0 20px 0;
        }

        .activity-list {
            display: flex;
            flex-direction: column;
