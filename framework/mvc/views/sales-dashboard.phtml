        }

        .activity-item {
            display: flex;
            gap: 12px;
            padding-bottom: 16px;
            border-bottom: 1px solid var(--phoenix-border-color);
        }

        .activity-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .activity-icon {
            font-size: 1.5rem;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--phoenix-bg-tertiary);
            border-radius: 50%;
        }

        .activity-content {
            flex: 1;
        }

        .activity-text {
            margin: 0 0 4px 0;
            font-size: 0.9rem;
        }

        .activity-text strong {
            color: var(--phoenix-accent-primary);
        }

        .activity-time {
            font-size: 0.8rem;
            color: var(--phoenix-text-muted);
        }

        /* Progress Bars */
        .progress-card {
            background: var(--phoenix-card-bg);
            border: 1px solid var(--phoenix-border-color);
            border-radius: var(--phoenix-radius);
            padding: 20px;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .progress-label {
            font-weight: 500;
        }

        .progress-value {
            font-weight: 600;
            color: var(--phoenix-accent-primary);
        }

        .progress-bar-bg {
            height: 8px;
            background: var(--phoenix-bg-tertiary);
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-bar-fill {
            height: 100%;
            border-radius: 4px;
            transition: width 1s ease;
        }

        .progress-bar-fill.cyan { background: linear-gradient(90deg, #00d4ff, #00a8cc); }
        .progress-bar-fill.green { background: linear-gradient(90deg, #22c55e, #16a34a); }
        .progress-bar-fill.purple { background: linear-gradient(90deg, #7b2cbf, #5b21b6); }
        .progress-bar-fill.orange { background: linear-gradient(90deg, #f59e0b, #d97706); }

        .progress-target {
            font-size: 0.8rem;
            color: var(--phoenix-text-muted);
            margin-top: 8px;
        }

        /* Data Table */
        .table-card {
            background: var(--phoenix-card-bg);
            border: 1px solid var(--phoenix-border-color);
            border-radius: var(--phoenix-radius);
            padding: 24px;
        }

        .table-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0 0 20px 0;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th,
        .data-table td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid var(--phoenix-border-color);
        }

        .data-table th {
            font-size: 0.85rem;
            font-weight: 500;
            color: var(--phoenix-text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .data-table tr:hover td {
            background: var(--phoenix-bg-tertiary);
        }

        .status-badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .status-badge.active {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
        }

        .status-badge.pending {
            background: rgba(245, 158, 11, 0.2);
            color: #f59e0b;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .stats-grid { grid-template-columns: repeat(2, 1fr); }
            .two-col-grid { grid-template-columns: 1fr; }
        }

        @media (max-width: 768px) {
            .stats-grid { grid-template-columns: 1fr; }
            .progress-grid { grid-template-columns: 1fr; }
        }
    </style>
