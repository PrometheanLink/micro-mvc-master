    <!-- Toast Container -->
    <div class="toast-container" id="toast-container"></div>

    <script>
        // State
        let currentView = 'dashboard';
        let pendingPage = 1;
        let allSightingsPage = 1;
        let usersPage = 1;

        // Navigation
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', () => {
                const view = item.dataset.view;
                switchView(view);
            });
        });

        function switchView(view) {
            // Update nav
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            document.querySelector(`.nav-item[data-view="${view}"]`)?.classList.add('active');

            // Update view
            document.querySelectorAll('.view').forEach(v => v.style.display = 'none');
            document.getElementById(`view-${view}`).style.display = 'block';

            currentView = view;

            // Load data for view
            if (view === 'pending') loadPending();
            if (view === 'flagged') loadFlagged();
            if (view === 'all-sightings') loadAllSightings();
            if (view === 'users') loadUsers();
        }

        // API Helpers
        async function apiCall(action, data = {}) {
            const formData = new FormData();
            formData.append('action', action);
            Object.entries(data).forEach(([key, value]) => {
                formData.append(key, value);
            });

            const response = await fetch('/en/moderation', {
                method: 'POST',
                body: formData
            });

            return response.json();
        }

        // Load pending sightings
        async function loadPending(page = 1) {
            pendingPage = page;
            const result = await apiCall('get_pending', { page, limit: 20 });

            if (result.success) {
                renderSightingsList('pending-list', result.sightings, true);
                renderPagination('pending-pagination', result.page, result.pages, loadPending);
            }
        }

        // Load flagged sightings
        async function loadFlagged() {
            const result = await apiCall('get_all_sightings', { status: 'flagged' });

            if (result.success) {
                renderSightingsList('flagged-list', result.sightings, true);
            }
        }

        // Load all sightings
        async function loadAllSightings(page = 1) {
            allSightingsPage = page;
            const search = document.getElementById('sightings-search')?.value || '';
            const status = document.getElementById('sightings-status-filter')?.value || '';

            const result = await apiCall('get_all_sightings', { page, limit: 20, search, status });

            if (result.success) {
                renderSightingsList('all-sightings-list', result.sightings, false);
                renderPagination('all-sightings-pagination', result.page, result.pages, loadAllSightings);
            }
        }

        // Load users
        async function loadUsers(page = 1) {
            usersPage = page;
            const search = document.getElementById('users-search')?.value || '';
            const role = document.getElementById('users-role-filter')?.value || '';

            const result = await apiCall('get_users', { page, limit: 20, search, role });

            if (result.success) {
                renderUsersTable(result.users);
                renderPagination('users-pagination', result.page, result.pages, loadUsers);
            }
        }

        // Render sightings list
        function renderSightingsList(containerId, sightings, showModActions) {
            const container = document.getElementById(containerId);

            if (!sightings || sightings.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">&#128065;</div>
                        <p class="empty-state-text">No sightings found</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = sightings.map(s => `
                <div class="sighting-card" data-id="${s.id}">
                    <div class="sighting-photo">
                        ${s.photo_path ? `<img src="${escapeHtml(s.photo_path)}" alt="Photo">` : '&#128247;'}
                    </div>
                    <div class="sighting-details">
                        <div class="sighting-species">
                            ${escapeHtml(s.species)}
                            <span class="status-badge status-${s.status}">${s.status}</span>
                        </div>
                        <div class="sighting-meta">
                            <span>&#128100; ${escapeHtml(s.username || s.observer_name)}</span>
                            <span>&#128197; ${formatDate(s.created_at)}</span>
                            ${s.location_name ? `<span>&#128205; ${escapeHtml(s.location_name)}</span>` : ''}
                        </div>
                        <div class="sighting-notes">${escapeHtml(s.notes || 'No notes')}</div>
                    </div>
                    ${showModActions && s.status === 'pending' ? `
                        <div class="sighting-actions">
                            <button class="btn btn-approve" onclick="approveSighting(${s.id})">&#10004; Approve</button>
                            <button class="btn btn-reject" onclick="showRejectModal(${s.id})">&#10008; Reject</button>
                            <button class="btn btn-flag" onclick="flagSighting(${s.id})">&#9888; Flag</button>
                        </div>
                    ` : showModActions && s.status === 'flagged' ? `
                        <div class="sighting-actions">
                            <button class="btn btn-approve" onclick="approveSighting(${s.id})">&#10004; Approve</button>
                            <button class="btn btn-reject" onclick="showRejectModal(${s.id})">&#10008; Reject</button>
                        </div>
                    ` : ''}
                </div>
            `).join('');
        }

        // Render users table
        function renderUsersTable(users) {
            const tbody = document.getElementById('users-table-body');

            if (!users || users.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; padding: 40px;">No users found</td></tr>';
                return;
            }

            const roleColors = {
                0: '#ff4466',
                1: '#888888',
                2: '#00d4ff',
                5: '#ffaa00',
                10: '#00ff88'
            };

            tbody.innerHTML = users.map(u => `
                <tr>
                    <td>
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div style="width: 32px; height: 32px; background: ${roleColors[u.role] || '#888'}; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 12px;">
                                ${u.username.charAt(0).toUpperCase()}
                            </div>
                            <div>
                                <div style="font-weight: 500;">${escapeHtml(u.username)}</div>
                                <div style="font-size: 12px; color: var(--phoenix-text-muted);">${escapeHtml(u.email)}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="role-badge" style="background: ${roleColors[u.role]}20; color: ${roleColors[u.role]};">${u.role_name}</span>
                    </td>
                    <td>
                        <span class="status-badge status-${u.status === 'active' ? 'approved' : u.status === 'banned' ? 'rejected' : 'pending'}">${u.status}</span>
                    </td>
                    <td>${u.approved_count}</td>
                    <td>${formatDate(u.created_at)}</td>
                    <td>
                        <button class="btn btn-secondary" onclick="showRoleModal(${u.id}, ${u.role})">Change Role</button>
                    </td>
                </tr>
            `).join('');
        }

        // Render pagination
        function renderPagination(containerId, currentPage, totalPages, callback) {
            const container = document.getElementById(containerId);
            if (totalPages <= 1) {
                container.innerHTML = '';
                return;
            }

            let html = '';
            html += `<button class="pagination-btn" ${currentPage <= 1 ? 'disabled' : ''} onclick="${callback.name}(${currentPage - 1})">Prev</button>`;

            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) {
                    html += `<button class="pagination-btn ${i === currentPage ? 'active' : ''}" onclick="${callback.name}(${i})">${i}</button>`;
                } else if (i === currentPage - 3 || i === currentPage + 3) {
                    html += '<span style="padding: 0 8px;">...</span>';
                }
            }

            html += `<button class="pagination-btn" ${currentPage >= totalPages ? 'disabled' : ''} onclick="${callback.name}(${currentPage + 1})">Next</button>`;

            container.innerHTML = html;
        }

        // Moderation actions
        async function approveSighting(id) {
            const result = await apiCall('approve', { sighting_id: id });

            if (result.success) {
                showToast('Sighting approved!', 'success');
                document.querySelector(`.sighting-card[data-id="${id}"]`)?.remove();

                // Refresh counts
                if (currentView === 'pending') loadPending(pendingPage);
                if (currentView === 'dashboard') location.reload();
            } else {
                showToast(result.error || 'Failed to approve', 'error');
            }
        }

        function showRejectModal(id) {
            document.getElementById('reject-sighting-id').value = id;
            document.getElementById('reject-reason').value = '';
            document.getElementById('reject-modal').classList.add('show');
        }

        async function confirmReject() {
            const id = document.getElementById('reject-sighting-id').value;
            const reason = document.getElementById('reject-reason').value;

            const result = await apiCall('reject', { sighting_id: id, reason });

            if (result.success) {
                showToast('Sighting rejected', 'success');
                closeModal('reject-modal');
                document.querySelector(`.sighting-card[data-id="${id}"]`)?.remove();

                if (currentView === 'pending') loadPending(pendingPage);
                if (currentView === 'dashboard') location.reload();
            } else {
                showToast(result.error || 'Failed to reject', 'error');
            }
        }

        async function flagSighting(id) {
            const result = await apiCall('flag', { sighting_id: id });

            if (result.success) {
                showToast('Sighting flagged for review', 'warning');
                document.querySelector(`.sighting-card[data-id="${id}"]`)?.remove();

                if (currentView === 'pending') loadPending(pendingPage);
            } else {
                showToast(result.error || 'Failed to flag', 'error');
            }
        }

        // User management
        function showRoleModal(userId, currentRole) {
            document.getElementById('role-user-id').value = userId;
            document.getElementById('new-role').value = currentRole;
            document.getElementById('role-modal').classList.add('show');
        }

        async function confirmRoleChange() {
            const userId = document.getElementById('role-user-id').value;
            const role = document.getElementById('new-role').value;

            const result = await apiCall('set_role', { user_id: userId, role });

            if (result.success) {
                showToast('User role updated', 'success');
                closeModal('role-modal');
                loadUsers(usersPage);
            } else {
                showToast(result.error || 'Failed to update role', 'error');
            }
        }

        // Logout
        async function logout() {
            const formData = new FormData();
            formData.append('action', 'logout');

            await fetch('/en/users', { method: 'POST', body: formData });
            window.location.href = '/en/nature-watch';
        }

        // Modal helpers
        function closeModal(id) {
            document.getElementById(id).classList.remove('show');
        }

        // Toast notifications
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = message;
            container.appendChild(toast);

            setTimeout(() => toast.remove(), 4000);
        }

        // Utility functions
        function escapeHtml(str) {
            if (!str) return '';
            const div = document.createElement('div');
            div.textContent = str;
            return div.innerHTML;
        }

        function formatDate(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' });
        }

        // Enter key search
        document.getElementById('sightings-search')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') loadAllSightings();
        });

        document.getElementById('users-search')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') loadUsers();
        });

        // Close modals on overlay click
        document.querySelectorAll('.modal-overlay').forEach(overlay => {
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) {
                    overlay.classList.remove('show');
                }
            });
        });
    </script>
