            position: relative;
            border-radius: 12px;
            overflow: hidden;
            background: var(--brand-surface);
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .gallery-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 40px rgba(0, 255, 136, 0.2);
        }
        .gallery-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            display: block;
        }
        .gallery-item:nth-child(3n+1) img { height: 280px; }
        .gallery-item:nth-child(5n+2) img { height: 220px; }
        .gallery-caption {
            padding: 15px;
            background: var(--brand-surface);
        }
        .gallery-caption h4 {
            margin: 0;
            color: var(--brand-text);
            font-size: 0.95rem;
        }
        .gallery-actions {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }
        .gallery-actions button {
            padding: 6px 12px;
            font-size: 0.8rem;
            background: var(--brand-bg);
            border: 1px solid var(--brand-border);
            border-radius: 6px;
            color: var(--brand-text-secondary);
            cursor: pointer;
            transition: all 0.2s;
        }
        .gallery-actions button:hover {
            background: var(--brand-primary);
            color: var(--brand-bg);
        }
        .lightbox {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .lightbox.active { display: flex; }
        .lightbox img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 8px;
        }
        .lightbox-close {
            position: absolute;
            top: 20px;
            right: 30px;
            font-size: 2rem;
            color: white;
            cursor: pointer;
        }
        .lightbox-caption {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            font-size: 1.2rem;
            text-align: center;
        }
    </style>
</head>
<body class="phoenix-page theme-cyber">

    <div class="phoenix-container">
        <header class="gallery-header">
            <h1 class="gradient-text" style="font-size: 2.5rem; font-weight: 800;">
                <?= htmlspecialchars($data['title']) ?>
            </h1>
            <p style="color: var(--brand-text-secondary); margin-top: 10px;">
                Template: gallery | Layout: <?= $data['config']['layout'] ?? 'masonry' ?>
            </p>

            <div class="gallery-filters">
                <button class="filter-btn active">All</button>
                <?php foreach ($data['albums'] ?? [] as $album): ?>
                    <button class="filter-btn"><?= htmlspecialchars($album['name']) ?></button>
                <?php endforeach; ?>
            </div>
        </header>

        <main class="gallery-grid">
            <?php foreach ($data['items'] ?? [] as $item): ?>
                <div class="gallery-item" data-src="<?= htmlspecialchars($item['src']) ?>" data-caption="<?= htmlspecialchars($item['caption'] ?? '') ?>">
                    <img src="<?= htmlspecialchars($item['thumbnail'] ?? $item['src']) ?>" alt="<?= htmlspecialchars($item['caption'] ?? 'Gallery image') ?>" loading="lazy">
                    <?php if (!empty($data['config']['show_captions'])): ?>
                        <div class="gallery-caption">
                            <h4><?= htmlspecialchars($item['caption'] ?? 'Untitled') ?></h4>
                            <div class="gallery-actions">
                                <?php if (!empty($data['config']['enable_download'])): ?>
                                    <button onclick="window.open('<?= htmlspecialchars($item['src']) ?>', '_blank')">Download</button>
                                <?php endif; ?>
                                <?php if (!empty($data['config']['enable_share'])): ?>
                                    <button onclick="navigator.share && navigator.share({url: '<?= htmlspecialchars($item['src']) ?>'})">Share</button>
                                <?php endif; ?>
                            </div>
                        </div>
                    <?php endif; ?>
                </div>
            <?php endforeach; ?>
        </main>
    </div>

    <div class="lightbox" id="lightbox">
        <span class="lightbox-close" onclick="closeLightbox()">&times;</span>
        <img id="lightbox-img" src="" alt="">
        <div class="lightbox-caption" id="lightbox-caption"></div>
    </div>

    <script src="/phoenix/assets/js/phoenix-core.js"></script>
    <script>
        document.querySelectorAll('.gallery-item').forEach(item => {
            item.addEventListener('click', function(e) {
                if (e.target.tagName === 'BUTTON') return;
                const src = this.dataset.src;
                const caption = this.dataset.caption;
                document.getElementById('lightbox-img').src = src;
                document.getElementById('lightbox-caption').textContent = caption;
                document.getElementById('lightbox').classList.add('active');
            });
        });

        function closeLightbox() {
            document.getElementById('lightbox').classList.remove('active');
        }

        document.getElementById('lightbox').addEventListener('click', function(e) {
            if (e.target === this) closeLightbox();
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeLightbox();
        });
    </script>
</body>
</html>
