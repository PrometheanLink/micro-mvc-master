{
  "id": "gallery",
  "name": "Media Gallery",
  "description": "Photo and video gallery with masonry layout and lightbox",
  "category": "media",
  "version": "1.0.0",
  "author": "PHOENIX",

  "slots": {
    "header": {
      "description": "Gallery header with title and controls",
      "accepts": ["page-header", "breadcrumb"],
      "max": 1
    },
    "toolbar": {
      "description": "View controls, filters, and upload button",
      "accepts": ["view-toggle", "filter-dropdown", "upload-button", "search-box"],
      "max": 1
    },
    "albums": {
      "description": "Album/folder navigation",
      "accepts": ["album-card", "folder-card"],
      "position": "sidebar-left",
      "max": 20
    },
    "media": {
      "description": "Media items grid",
      "accepts": ["image-card", "video-card", "media-card"],
      "repeatable": true,
      "max": 500
    },
    "lightbox": {
      "description": "Full-screen viewer modal",
      "accepts": ["lightbox"],
      "max": 1
    }
  },

  "layout": {
    "type": "masonry",
    "columns": "auto-fill",
    "minWidth": "250px",
    "gap": "15px",
    "responsive": {
      "desktop": { "columns": 4 },
      "tablet": { "columns": 3 },
      "mobile": { "columns": 2 }
    }
  },

  "features": {
    "particles": true,
    "glassmorphism": true,
    "grid_background": true,
    "lightbox": true,
    "lazy_load": true,
    "infinite_scroll": true,
    "keyboard_nav": true,
    "touch_gestures": true
  },

  "themes": ["dark", "light", "cyber", "matrix", "sunset", "ocean"],

  "config": {
    "title": { "type": "string", "default": "Gallery" },
    "theme": { "type": "string", "enum": ["dark", "light", "cyber"], "default": "dark" },
    "layout": { "type": "string", "enum": ["masonry", "grid", "justified"], "default": "masonry" },
    "columns": { "type": "number", "default": 4, "min": 2, "max": 6 },
    "show_captions": { "type": "boolean", "default": true },
    "show_metadata": { "type": "boolean", "default": false },
    "enable_download": { "type": "boolean", "default": false },
    "enable_share": { "type": "boolean", "default": true },
    "thumbnail_size": { "type": "string", "enum": ["small", "medium", "large"], "default": "medium" }
  }
}
